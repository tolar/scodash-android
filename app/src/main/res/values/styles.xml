<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGrayBackground</item>
        <item name="colorButtonNormal">@color/colorButton</item>
        <item name="colorAccent">@color/colorButton</item>
        <item name="android:textColor">@color/colorText</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BackButton" parent="@style/Widget.AppCompat.ImageButton">
        <item name="android:textColor">@color/colorTextButton</item>
        <item name="android:src">@drawable/outline_keyboard_arrow_left_black_36</item>
        <item name="android:background">@drawable/imageview_shadow_border</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="RemoveButton" parent="@style/Widget.AppCompat.ImageButton">
        <item name="android:src">@drawable/outline_keyboard_arrow_left_black_36</item>
        <item name="android:background">@drawable/baseline_clear_black_36</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="NextButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorTextButton</item>
        <item name="android:drawableEnd">@drawable/outline_keyboard_arrow_right_white_36</item>
        <item name="android:text">@string/next_step</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
    </style>

</resources>
