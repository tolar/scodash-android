<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorGrayBackground</item>
        <item name="colorButtonNormal">@color/colorNavyBlue</item>
        <item name="colorAccent">@color/colorNavyBlue</item>
        <item name="android:textColor">@color/colorPureBlack</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionModeShareDrawable">@drawable/baseline_share_black_18</item>
    </style>

    <style name="BackButton" parent="@style/Widget.AppCompat.ImageButton">
        <item name="android:textColor">@color/colorPureWhite</item>
        <item name="android:src">@drawable/outline_keyboard_arrow_left_black_36</item>
        <item name="android:background">@drawable/imageview_shadow_border</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="RemoveButton" parent="@style/Widget.AppCompat.ImageButton">
        <item name="android:src">@drawable/baseline_clear_black_24</item>
        <item name="android:background">@color/colorWhiteBackground</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="AddButton" parent="@style/Widget.AppCompat.ImageButton">
        <item name="android:src">@drawable/round_add_black_36</item>
        <item name="android:background">@drawable/imageview_shadow_border</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="BlueButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorPureWhite</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="NextButton" parent="BlueButton">
        <item name="android:text">@string/next_step</item>
        <item name="android:drawableEnd">@drawable/outline_keyboard_arrow_right_white_36</item>
    </style>

    <style name="CreateDashboardButton" parent="NextButton">
        <item name="android:text">@string/create_dashboard</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorErrorText</item>
    </style>

    <style name="ScoreAddButton" parent="@style/Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/green_circle_background</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="ScoreRemoveButton" parent="@style/Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/red_circle_background</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="ScoreButton" parent="@style/Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/black_circle_background</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="ScoreText">
        <item name="android:textColor">@color/colorWhiteBackground</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
